{% extends "admin/adminbase.html.twig" %}

{% block head %}
{{ encore_entry_link_tags('admin_category') }}
{{ encore_entry_script_tags('admin_category') }}
{% endblock %}

{% block breadcrumb %}
<li class="breadcrumb-item">Catégories</li>
<li class="breadcrumb-item active">
  {% if category is defined %}
  {{ category.name }}
  {% else %}
  Nouvelle catégorie
  {% endif %}
</li>
{% endblock %}

{% block body %}
<div class="card p-3 m-3 shadow-lg">
  {% for f in app.session.flashbag.get('success') %}
  <div class="alert alert-success">
    {{ f }}
  </div>
  {% endfor %}

  {{ form(form) }}

  {% if category is defined%}
  <div class="mb-3">
    <button data-category-id="{{ category.id }}" data-category-name="{{ category.name }}"
      class="btn btn-danger delete-category">Supprimer</button>
  </div>
  {% endif %}
</div>

{% include 'admin/components/_delete_modal.html.twig' %}
{% endblock %}
