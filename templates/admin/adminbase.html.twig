{% extends "base.html.twig" %}

{% block bodyclasses %}
container-fluid
{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
{% endblock %}

{% block javascripts %}
<script src="https://code.jquery.com/jquery-3.7.1.slim.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
{% endblock %}

{% set onAdminHome = app.request.attributes.get('_route') == 'admin_dashboard' %}

{% block top %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="/">Mediatek Formation</a>
      </li>
      <li class="breadcrumb-item {{ onAdminHome ? 'active' : '' }}" {{ onAdminHome ? 'aria-current="page"' : '' }}>
        {% if onAdminHome %}
        Admin
        {% else %}
        <a href="{{ path('admin_dashboard') }}">Admin</a>
        {% endif %}
      </li>
      {% block breadcrumb %}
      {% endblock %}
    </ol>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
      </ul>
      <div class="d-flex dropdown">
        <button class="btn btn-light dropdown-toggle" type="button" id="userDropdownBtn" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="bi bi-person-circle"></i>
          {{ app.user.username }}
        </button>
        <ul class="dropdown-menu" aria-labelledby="userDropdownBtn">
          <li>
            <a class="dropdown-item bg-danger text-white" href="{{ path('admin_auth_logout') }}">Se d√©connecter</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</nav>
{% endblock %}
